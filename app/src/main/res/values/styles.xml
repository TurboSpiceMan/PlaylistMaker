<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="mainScreenButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="fontFamily">@font/yandex_display_medium</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="iconTint">@color/black</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/ic_padding</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
        <item name="android:textFontWeight">500</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="settingsMenuText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical|start</item>
        <item name="android:layout_marginStart">@dimen/main_padding</item>
        <item name="android:textSize">@dimen/settings_text_size</item>
        <item name="fontFamily">@font/yandex_display_regular</item>
        <item name="fontWeight">400</item>
    </style>

    <style name="settingsIconView">
        <item name="android:layout_width">@dimen/ic_size</item>
        <item name="android:layout_height">@dimen/ic_size</item>
        <item name="android:layout_gravity">center_vertical|end</item>
        <item name="android:layout_marginEnd">@dimen/ic_margin_end</item>
        <item name="tint">@color/ic_settings</item>
    </style>

    <style name="panelHeaderText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/primary_text_size</item>
        <item name="android:layout_gravity">start|center_vertical</item>
        <item name="fontFamily">@font/yandex_display_medium</item>
        <item name="fontWeight">500</item>
    </style>

    <style name="searchBarIcons">
        <item name="tint">@color/gray</item>
        <item name="android:background">@color/light_gray</item>
    </style>

    <style name="backButtonStyle">
        <item name="tint">@color/black</item>
    </style>

    <style name="searchBar">
        <item name="cornerRadius">8dp</item>
        <item name="android:background">@drawable/radius_corners_search</item>
        <item name="android:backgroundTint">@color/light_gray</item>
    </style>

    <style name="hintColor">
        <item name="android:textColorHint">@color/gray</item>
    </style>

    <style name="trackName">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="trackArtistText">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="trackCardIcons">
        <item name="tint">@color/gray</item>
    </style>

    <style name="placeholderTextColor">
        <item name="android:textColor">@color/black</item>
        <item name="fontWeight">400</item>
        <item name="fontFamily">@font/yandex_display_medium</item>
    </style>

    <style name="placeholderNothing">
        <item name="android:src">@drawable/nothing_to_find_light</item>
    </style>
    <style name="placeholderNoInternet">
        <item name="android:src">@drawable/no_internet_light</item>
    </style>

    <style name="refreshButton">
        <item name="android:textSize">@dimen/refresh_button_text</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/yandex_display_medium</item>
        <item name="fontWeight">500</item>
        <item name="backgroundTint">@color/black</item>
        <item name="cornerRadius">@dimen/refresh_corners</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="ic_arrow_style">
        <item name="srcCompat">@drawable/ic_arrow</item>
    </style>
    
    <style name="playedTime">
        <item name="fontFamily">@font/yandex_display_medium</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/artist_name_text_size_on_player</item>
    </style>
    
    <style name="mainPlayerText">
        <item name="fontFamily">@font/yandex_display_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontWeight">400</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>
    
    <style name="trackAttributes">
        <item name="fontFamily">@font/yandex_display_regular</item>
        <item name="android:textSize">@dimen/track_attributes_text_size</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:fontWeight">400</item>
    </style>

    <style name="trackAttributesText">
        <item name="fontFamily">@font/yandex_display_regular</item>
        <item name="android:textSize">@dimen/track_attributes_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontWeight">400</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAlignment">textEnd</item>
    </style>

    <style name="playListButton">
        <item name="srcCompat">@drawable/ic_add_to_playlist</item>
    </style>

    <style name="likeButton">
        <item name="srcCompat">@drawable/ic_like_button</item>
    </style>

    <style name="playButton">
        <item name="srcCompat">@drawable/ic_play_button</item>
    </style>


</resources>