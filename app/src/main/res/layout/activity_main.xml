<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="28dp"
    android:paddingHorizontal="@dimen/main_padding"
    android:theme="@style/MainScreenTheme" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height_size">
        <TextView
            style="@style/panelHeaderText"
            android:text="@string/app_name"
            android:textColor="@color/white"/>

    </FrameLayout>

    <Button
        android:id="@+id/search_button"
        style="@style/mainScreenButton"
        android:layout_marginTop="24dp"
        android:text="@string/search_text"
        app:icon="@drawable/ic_search"
        />

    <Button
        android:id="@+id/media_button"
        style="@style/mainScreenButton"
        android:text="@string/media_text"
        app:icon="@drawable/ic_media"
        android:layout_marginTop="@dimen/main_padding"
        />

    <Button
        android:id="@+id/settings_button"
        style="@style/mainScreenButton"
        android:layout_marginTop="@dimen/main_padding"
        android:text="@string/settings_text"
        app:icon="@drawable/ic_settings"
        />

</LinearLayout>

